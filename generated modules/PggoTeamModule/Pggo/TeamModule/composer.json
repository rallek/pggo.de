{
    "name": "pggo/team-module",
    "version": "0.2.0",
    "description": "team presentation extenstion. Different teams by different categories",
    "type": "zikula-module",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Ralf Koester",
            "email": "ralf@familie-koester.de",
            "homepage": "http://pggo.de",
            "role": "owner"
        }
    ],
    "autoload": {
        "psr-4": { "Pggo\\TeamModule\\": "" }
    },
    "require": {
        "php": ">=5.4.1"
    },
    "suggest": {
    },
    "extra": {
        "zikula": {
            "core-compatibility": ">=1.4.5",
            "class": "Pggo\\TeamModule\\PggoTeamModule",
            "displayname": "Team",
            "url": "team",
            "capabilities": {
                "user": {"route": "pggoteammodule_person_index"},
                "admin": {"route": "pggoteammodule_person_adminindex"},
                "searchable": {"class": "Pggo\\TeamModule\\Helper\\SearchHelper"},
                "categorizable": {
                    "entities": [
                        "Pggo\\TeamModule\\Entity\\PersonEntity"
                    ]
                },
                "hook_subscriber": {"class": "Pggo\\TeamModule\\Container\\HookContainer"}
            },
            "securityschema": {
                "PggoTeamModule::": "::",
                "PggoTeamModule:ItemListBlock:": "Block title::",
                "PggoTeamModule:Person:": "Person ID::",
                "PggoTeamModule::Ajax": "::"
            }
        }
    }
}
