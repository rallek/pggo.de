{# purpose of this template: build the form to edit an instance of person #}
{% set baseTemplate = app.request.query.getBoolean('raw', false) ? 'raw' : (routeArea == 'admin' ? 'adminBase' : 'base') %}
{% extends 'PggoTeamModule::' ~ baseTemplate ~ '.html.twig' %}

{% block header %}
    {{ parent() }}
    {{ pageAddAsset('javascript', zasset('@PggoTeamModule:js/PggoTeamModule.Validation.js', 98)) }}
    {{ pageAddAsset('javascript', zasset('@PggoTeamModule:js/PggoTeamModule.EditFunctions.js', 99)) }}
    {{ pageAddAsset('javascript', asset('typeahead/typeahead.bundle.min.js')) }}
{% endblock %}

{% block title mode == 'create' ? __('Create person') : __('Edit person') %}
{% block admin_page_icon mode == 'create' ? 'plus' : 'pencil-square-o' %}
{% block content %}
    <div class="pggoteammodule-person pggoteammodule-edit">
{% form_theme form with [
    '@PggoTeamModule/Form/bootstrap_3.html.twig',
    'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
] %}
{{ form_start(form, {attr: {id: 'personEditForm', class: 'pggoteam-edit-form'}}) }}
{{ form_errors(form) }}
<fieldset>
    <legend>{{ __('Content') }}</legend>
    {{ form_row(form.lastName) }}
    {{ form_row(form.firstName) }}
    {{ form_row(form.image) }}
    {{ form_row(form.copyright) }}
    {{ form_row(form.shortDescription) }}
    {{ form_row(form.description) }}
    {{ form_row(form.functionRole) }}
    {{ form_row(form.emailAddress) }}
    {{ form_row(form.contact) }}
</fieldset>

{% if featureActivationHelper.isEnabled(constant('Pggo\\TeamModule\\Helper\\FeatureActivationHelper::CATEGORIES'), 'person') %}
    {{ include('@PggoTeamModule/Helper/includeCategoriesEdit.html.twig', { obj: person }) }}
{% endif %}
{% if mode != 'create' %}
    {{ include('@PggoTeamModule/Helper/includeStandardFieldsEdit.html.twig', { obj: person }) }}
{% endif %}

{# include display hooks #}
{% set hookId = mode != 'create' ? person.id : null %}
{% set hooks = notifyDisplayHooks(eventName='pggoteammodule.ui_hooks.persons.form_edit', id=hookId) %}
{% if hooks is iterable and hooks|length > 0 %}
    {% for providerArea, hook in hooks if providerArea != 'provider.scribite.ui_hooks.editor' %}
        <fieldset>
            {{ hook }}
        </fieldset>
    {% endfor %}
{% endif %}

{% if form.moderationSpecificCreator is defined %}
    <fieldset id="moderationFieldsSection">
        <legend>{{ __('Moderation') }} <i class="fa fa-expand"></i></legend>
        <div id="moderationFieldsContent">
            {{ form_row(form.moderationSpecificCreator) }}
            {{ form_row(form.moderationSpecificCreationDate) }}
        </div>
    </fieldset>
{% endif %}

{# include return control #}
{% if mode == 'create' %}
    <fieldset>
        <legend>{{ __('Return control') }}</legend>
        {{ form_row(form.repeatCreation) }}
    </fieldset>
{% endif %}

{# include possible submit actions #}
<div class="form-group form-buttons">
    <div class="col-sm-offset-3 col-sm-9">
        {% for action in actions %}
            {{ form_widget(attribute(form, action.id)) }}
        {% endfor %}
        {{ form_widget(form.reset) }}
        {{ form_widget(form.cancel) }}
    </div>
</div>
{{ form_end(form) }}
</div>
{% endblock %}
{% block footer %}
    {{ parent() }}

    {% set editImage = '<span class="fa fa-pencil-square-o"></span>' %}
    {% set deleteImage = '<span class="fa fa-trash-o"></span>' %}
    
    <script type="text/javascript">
    /* <![CDATA[ */
        
        
        ( function($) {
            $(document).ready(function() {
                // initialise auto completion for user fields
                {% if form.moderationSpecificCreator is defined %}
                    pggoTeamInitUserField('pggoteammodule_person_moderationSpecificCreator', 'getCommonUsersList');
                {% endif %}
                pggoTeamInitEditForm('{{ mode }}', '{% if mode != 'create' %}{{ person.id }}{% endif %}');
                pggoTeamInitUploadField('pggoteammodule_person_image_image');
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endblock %}
