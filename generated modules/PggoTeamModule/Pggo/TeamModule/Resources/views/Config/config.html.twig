{# purpose of this template: module configuration page #}
{% extends 'PggoTeamModule::adminBase.html.twig' %}
{% block title __('Settings') %}
{% block admin_page_icon 'wrench' %}
{% block content %}
    <div class="pggoteammodule-config">
        {% form_theme form with [
            '@PggoTeamModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(form) }}
        <ul class="nav nav-pills">
        {% set tabTitle = __('List views') %}
        <li class="active" role="presentation">
            <a id="vars1Tab" href="#tab1" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
        </li>
        {% set tabTitle = __('Images') %}
        <li class=" dropdown" role="presentation">
            <a id="imagesTabDrop" class="dropdown-toggle" href="#" data-toggle="dropdown" aria-controls="imagesTabDropSections" aria-expanded="false">{{ tabTitle }}<span class="caret"></span></a>
            <ul id="imagesTabDropSections" class="dropdown-menu" aria-labelledby="imagesTabDrop">
            <li>
                <a id="imagesPersonImageTab" href="#tabImagesPersonImage" role="tab" data-toggle="tab" aria-controls="tabImagesPersonImage">Persons image</a>
            </li>
            </ul>
        </li>
        </ul>

        {{ form_errors(form) }}
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane fade in active" id="tab1" aria-labelledby="vars1Tab">
                {% set tabTitle = __('List views') %}
                <fieldset>
                    <legend>{{ tabTitle }}</legend>
                
                    <p class="alert alert-info">{{ __('Here you can configure parameters for list views.')|nl2br }}</p>
                
                    {{ form_row(form.personEntriesPerPage) }}
                    {{ form_row(form.linkOwnPersonsOnAccountPage) }}
                </fieldset>
            </div>
            <div role="tabpanel" class="tab-pane fade" id="tabImagesPersonImage" aria-labelledby="imagesPersonImageTab">
                {% set tabTitle = __('Image settings for persons image') %}
                <fieldset>
                    <legend>{{ tabTitle }}</legend>
            
                    {{ form_row(form.enableShrinkingForPersonImage) }}
                    <div id="shrinkDetailsPersonImage">
                    {{ form_row(form.shrinkWidthPersonImage) }}
                    {{ form_row(form.shrinkHeightPersonImage) }}
                    </div>
                    {{ form_row(form.thumbnailModePersonImage) }}
                    {{ form_row(form.thumbnailWidthPersonImageView) }}
                    {{ form_row(form.thumbnailHeightPersonImageView) }}
                    {{ form_row(form.thumbnailWidthPersonImageDisplay) }}
                    {{ form_row(form.thumbnailHeightPersonImageDisplay) }}
                    {{ form_row(form.thumbnailWidthPersonImageEdit) }}
                    {{ form_row(form.thumbnailHeightPersonImageEdit) }}
                </fieldset>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_widget(form.save) }}
                {{ form_widget(form.cancel) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block footer %}
    {{ parent() }}
    {{ pageAddAsset('javascript', zasset('@PggoTeamModule:js/PggoTeamModule.Config.js')) }}
{% endblock %}
