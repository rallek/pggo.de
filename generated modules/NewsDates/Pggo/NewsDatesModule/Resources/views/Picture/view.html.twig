{# purpose of this template: pictures list view #}
{% extends routeArea == 'admin' ? 'PggoNewsDatesModule::adminBase.html.twig' : 'PggoNewsDatesModule::base.html.twig' %}
{% block title own ? __('My pictures') : __('Picture list') %}
{% block admin_page_icon 'list-alt' %}
{% block content %}
<div class="pggonewsdatesmodule-picture pggonewsdatesmodule-view">

    {{ block('page_nav_links') }}

    {{ include('@PggoNewsDatesModule/Picture/viewQuickNav.html.twig', { workflowStateFilter: false }) }}{# see template file for available options #}

    {% if routeArea == 'admin' %}
    <form action="{{ path('pggonewsdatesmodule_picture_' ~ routeArea ~ 'handleselectedentries') }}" method="post" id="picturesViewForm" class="form-horizontal" role="form">
        <div>
    {% endif %}
        <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover{% if routeArea == 'admin' %} table-condensed{% endif %}">
            <colgroup>
                {% if routeArea == 'admin' %}
                    <col id="cSelect" />
                {% endif %}
                <col id="cTitle" />
                <col id="cImage" />
                <col id="cDescription" />
                <col id="cArticle" />
                <col id="cItemActions" />
            </colgroup>
            <thead>
            <tr>
                {% if routeArea == 'admin' %}
                    <th id="hSelect" scope="col" class="text-center">
                        <input type="checkbox" class="pggonewsdates-mass-toggle" />
                    </th>
                {% endif %}
                <th id="hTitle" scope="col" class="text-left">
                    <a href="{{ sort.title.url }}" title="{{ __f('Sort by %s', {'%s': 'title'}) }}" class="{{ sort.title.class }}">{{ __('Title') }}</a>
                </th>
                <th id="hImage" scope="col" class="text-left z-order-unsorted">
                    {{ __('Image') }}
                </th>
                <th id="hDescription" scope="col" class="text-left z-order-unsorted">
                    {{ __('Description') }}
                </th>
                <th id="hArticle" scope="col" class="text-left">
                    <a href="{{ sort.article.url }}" title="{{ __f('Sort by %s', {'%s': 'article'}) }}" class="{{ sort.article.class }}">{{ __('Article') }}</a>
                </th>
                <th id="hItemActions" scope="col" class="text-right z-order-unsorted">{{ __('Actions') }}</th>
            </tr>
            </thead>
            <tbody>
        
        {% for picture in items %}
            <tr>
                {% if routeArea == 'admin' %}
                    <td headers="hSelect" class="text-center">
                        <input type="checkbox" name="items[]" value="{{ picture.id }}" class="pggonewsdates-toggle-checkbox" />
                    </td>
                {% endif %}
                <td headers="hTitle" class="text-left">
                    {{ picture.title }}
                </td>
                <td headers="hImage" class="text-left">
                    {% if picture.imageMeta|default %}
                    <a href="{{ picture.imageUrl }}" title="{{ picture.getTitleFromDisplayPattern()|e('html_attr') }}"{% if picture.imageMeta.isImage %} class="image-link"{% endif %}>
                    {% if picture.imageMeta.isImage %}
                        {% set thumbOptions = attribute(thumbRuntimeOptions, 'pictureImage') %}
                        <img src="{{ picture.image.getPathname()|imagine_filter('zkroot', thumbOptions) }}" alt="{{ picture.getTitleFromDisplayPattern()|e('html_attr') }}" width="{{ thumbOptions.thumbnail.size[0] }}" height="{{ thumbOptions.thumbnail.size[1] }}" class="img-thumbnail" />
                    {% else %}
                        {{ __('Download') }} ({{ picture.imageMeta.size|pggonewsdatesmodule_fileSize(picture.image.getPathname(), false, false) }})
                    {% endif %}
                    </a>
                    {% endif %}
                </td>
                <td headers="hDescription" class="text-left">
                    {{ picture.description|safeHtml }}
                </td>
                <td headers="hArticle" class="text-left">
                    {% if picture.article|default %}
                        <a href="{{ path('pggonewsdatesmodule_article_' ~ routeArea ~ 'display', { 'id': picture.article.id, 'slug': picture.article.slug }) }}">{% spaceless %}
                          {{ picture.article.getTitleFromDisplayPattern() }}
                        {% endspaceless %}</a>
                        <a id="articleItem{{ picture.id }}_rel_{{ picture.article.id }}Display" href="{{ path('pggonewsdatesmodule_article_' ~ routeArea ~ 'display', {'id': picture.article.id, 'slug': picture.article.slug, 'raw': 1 }) }}" title="{{ __('Open quick view window')|e('html_attr') }}" class="pggonewsdates-inline-window hidden" data-modal-title="{{ picture.article.getTitleFromDisplayPattern()|e('html_attr') }}"><span class="fa fa-id-card-o"></span></a>
                    {% else %}
                        {{ __('Not set.') }}
                    {% endif %}
                </td>
                <td id="itemActions{{ picture.id }}" headers="hItemActions" class="actions text-right nowrap z-w02">
                    {% set itemActions = knp_menu_get('PggoNewsDatesModule:ItemActionsMenu:menu', [], { entity: picture, area: routeArea, context: 'view' }) %}
                    <div class="dropdown">
                        <a id="itemActions{{ picture.id }}DropDownToggle" role="button" data-toggle="dropdown" data-target="#" href="javascript:void(0);" class="hidden dropdown-toggle"><i class="fa fa-tasks"></i> <span class="caret"></span></a>
                        {{ knp_menu_render(itemActions, { template: 'ZikulaMenuModule:Override:actions.html.twig' }) }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr class="z-{{ routeArea == 'admin' ? 'admin' : 'data' }}tableempty">
                <td class="text-left" colspan="{% if routeArea == 'admin' %}6{% else %}5{% endif %}">
            {{ __('No pictures found.') }}
              </td>
            </tr>
        {% endfor %}
        
            </tbody>
        </table>
        </div>
        
        {% if showAllEntries != 1 and pager|default %}
            {{ pager({ rowcount: pager.amountOfItems, limit: pager.itemsPerPage, display: 'page', route: 'pggonewsdatesmodule_picture_' ~ routeArea ~ 'view'}) }}
        {% endif %}
    {% if routeArea == 'admin' %}
            <fieldset>
                <label for="pggoNewsDatesModuleAction" class="col-sm-3 control-label">{{ __('With selected pictures') }}</label>
                <div class="col-sm-6">
                    <select id="pggoNewsDatesModuleAction" name="action" class="form-control input-sm">
                        <option value="">{{ __('Choose action') }}</option>
                        <option value="delete" title="{{ __('Delete content permanently.') }}">{{ __('Delete') }}</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <input type="submit" value="{{ __('Submit') }}" class="btn btn-default btn-sm" />
                </div>
            </fieldset>
        </div>
    </form>
    {% endif %}
</div>
{% endblock %}
{% block page_nav_links %}
    {% if canBeCreated %}
        {% if hasPermission('PggoNewsDatesModule:Picture:', '::', 'ACCESS_EDIT') %}
            {% set createTitle = __('Create picture') %}
            <a href="{{ path('pggonewsdatesmodule_picture_' ~ routeArea ~ 'edit') }}" title="{{ createTitle|e('html_attr') }}" class="fa fa-plus">{{ createTitle }}</a>
        {% endif %}
    {% endif %}
    {% if showAllEntries == 1 %}
        {% set linkTitle = __('Back to paginated view') %}
        <a href="{{ path('pggonewsdatesmodule_picture_' ~ routeArea ~ 'view') }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
    {% else %}
        {% set linkTitle = __('Show all entries') %}
        <a href="{{ path('pggonewsdatesmodule_picture_' ~ routeArea ~ 'view', { all: 1 }) }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
    {% endif %}
{% endblock %}
