{# purpose of this template: build the form to edit an instance of picture #}
{% set baseTemplate = app.request.query.getBoolean('raw', false) ? 'raw' : (routeArea == 'admin' ? 'adminBase' : 'base') %}
{% extends 'PggoNewsDatesModule::' ~ baseTemplate ~ '.html.twig' %}

{% block header %}
    {{ parent() }}
    {{ pageAddAsset('javascript', zasset('@PggoNewsDatesModule:js/PggoNewsDatesModule.Validation.js', 98)) }}
    {{ pageAddAsset('javascript', zasset('@PggoNewsDatesModule:js/PggoNewsDatesModule.EditFunctions.js', 99)) }}
    {{ pageAddAsset('javascript', pagevars.homepath ~ 'vendor/twitter/typeahead.js/dist/typeahead.bundle.min.js') }}
{% endblock %}

{% block title mode == 'create' ? __('Create picture') : __('Edit picture') %}
{% block admin_page_icon mode == 'create' ? 'plus' : 'pencil-square-o' %}
{% block content %}
    <div class="pggonewsdatesmodule-picture pggonewsdatesmodule-edit">
{% form_theme form with [
    '@PggoNewsDatesModule/Form/bootstrap_3.html.twig',
    'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
] %}
{{ form_start(form, {attr: {id: 'pictureEditForm', class: 'pggonewsdates-edit-form'}}) }}
{{ form_errors(form) }}
<fieldset>
    <legend>{{ __('Content') }}</legend>
    {{ form_row(form.title) }}
    {{ form_row(form.image) }}
    {{ form_row(form.copyright) }}
    {{ form_row(form.description) }}
</fieldset>

{{ include(
    '@PggoNewsDatesModule/Article/includeSelectOne.html.twig',
    { group: 'picture', alias: 'article', aliasReverse: 'pictures', mandatory: false, idPrefix: 'newsdatePicture_Article', linkingItem: picture, displayMode: 'choices', allowEditing: false }
) }}

{# include return control #}
{% if mode == 'create' %}
    <fieldset>
        <legend>{{ __('Return control') }}</legend>
        {{ form_row(form.repeatCreation) }}
    </fieldset>
{% endif %}

{# include possible submit actions #}
<div class="form-group form-buttons">
    <div class="col-sm-offset-3 col-sm-9">
        {% for action in actions %}
            {{ form_widget(attribute(form, action.id)) }}
        {% endfor %}
        {{ form_widget(form.reset) }}
        {{ form_widget(form.cancel) }}
    </div>
</div>
{{ form_end(form) }}
</div>
{% endblock %}
{% block footer %}
    {{ parent() }}

    {% set editImage = '<span class="fa fa-pencil-square-o"></span>' %}
    {% set deleteImage = '<span class="fa fa-trash-o"></span>' %}
    
    <script type="text/javascript">
    /* <![CDATA[ */
        
        
        ( function($) {
            $(document).ready(function() {
                pggoNewsDatesInitEditForm('{{ mode }}', '{% if mode != 'create' %}{{ picture.id }}{% endif %}');
                pggoNewsDatesInitUploadField('pggonewsdatesmodule_picture_image_image');
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endblock %}
