{# purpose of this template: inclusion template for display of related articles #}
{% set hasAdminPermission = hasPermission('PggoNewsDatesModule:Article:', '::', 'ACCESS_COMMENT') %}
{% if nolink is not defined %}
    {% set nolink = false %}
{% endif %}
{% if items|default and items|length > 0 %}
<ul class="list-group pggonewsdatesmodule-related-item-list article">
{% for item in items %}
    {% if hasAdminPermission or item.workflowState == 'approved' %}
    <li class="list-group-item">
<h4 class="list-group-item-heading">
{% spaceless %}
{% if not nolink %}
    <a href="{{ path('pggonewsdatesmodule_article_' ~ routeArea ~ 'display', { 'id': item.id, 'slug': item.slug }) }}" title="{{ item.getTitleFromDisplayPattern()|e('html_attr') }}">
{% endif %}
    {{ item.getTitleFromDisplayPattern() }}
{% if not nolink %}
    </a>
    <a id="articleItem{{ item.id }}Display" href="{{ path('pggonewsdatesmodule_article_' ~ routeArea ~ 'display', { 'id': item.id, 'slug': item.slug, 'raw': 1 }) }}" title="{{ __('Open quick view window') }}" class="pggonewsdates-inline-window hidden" data-modal-title="{{ item.getTitleFromDisplayPattern()|e('html_attr') }}"><span class="fa fa-id-card-o"></span></a>
{% endif %}
{% endspaceless %}
</h4>
{% if item.image is not empty and item.imageMeta.isImage %}
    <p class="list-group-item-text">
        <img src="{{ item.image.getPathname()|imagine_filter('zkroot', relationThumbRuntimeOptions) }}" alt="{{ item.getTitleFromDisplayPattern()|e('html_attr') }}" width="{{ relationThumbRuntimeOptions.thumbnail.size[0] }}" height="{{ relationThumbRuntimeOptions.thumbnail.size[1] }}" class="img-rounded" />
    </p>
{% endif %}
    </li>
    {% endif %}
{% endfor %}
</ul>
{% endif %}
