{# purpose of this template: build the form to edit an instance of event #}
{% set baseTemplate = app.request.query.getBoolean('raw', false) ? 'raw' : (routeArea == 'admin' ? 'adminBase' : 'base') %}
{% extends 'PggoNewsDatesModule::' ~ baseTemplate ~ '.html.twig' %}

{% block header %}
    {{ parent() }}
    {{ pageAddAsset('javascript', zasset('@PggoNewsDatesModule:js/PggoNewsDatesModule.Validation.js', 98)) }}
    {{ pageAddAsset('javascript', zasset('@PggoNewsDatesModule:js/PggoNewsDatesModule.EditFunctions.js', 99)) }}
    {{ pageAddAsset('javascript', pagevars.homepath ~ 'vendor/twitter/typeahead.js/dist/typeahead.bundle.min.js') }}
{% endblock %}

{% block title mode == 'create' ? __('Create event') : __('Edit event') %}
{% block admin_page_icon mode == 'create' ? 'plus' : 'pencil-square-o' %}
{% block content %}
    <div class="pggonewsdatesmodule-event pggonewsdatesmodule-edit">
{% form_theme form with [
    '@PggoNewsDatesModule/Form/bootstrap_3.html.twig',
    'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
] %}
{{ form_start(form, {attr: {id: 'eventEditForm', class: 'pggonewsdates-edit-form'}}) }}
{{ form_errors(form) }}
<fieldset>
    <legend>{{ __('Content') }}</legend>
    {{ form_row(form.title) }}
    {{ form_row(form.startDate) }}
    {{ form_row(form.duration) }}
    {{ form_row(form.location) }}
    {{ form_row(form.description) }}
    {{ form_row(form.eventUrl) }}
</fieldset>

{% if featureActivationHelper.isEnabled(constant('Pggo\\NewsDatesModule\\Helper\\FeatureActivationHelper::CATEGORIES'), 'event') %}
    {{ include('@PggoNewsDatesModule/Helper/includeCategoriesEdit.html.twig', { obj: event }) }}
{% endif %}
{{ include(
    '@PggoNewsDatesModule/Article/Many.html.twig',
    { group: 'event', alias: 'articles', aliasReverse: 'event', mandatory: false, idPrefix: 'newsdateEvent_Articles', linkingItem: event, displayMode: 'choices', allowEditing: true }
) }}
{% if mode != 'create' %}
    {{ include('@PggoNewsDatesModule/Helper/includeStandardFieldsEdit.html.twig', { obj: event }) }}
{% endif %}

{# include display hooks #}
{% set hookId = mode != 'create' ? event.id : null %}
{% set hooks = notifyDisplayHooks(eventName='pggonewsdatesmodule.ui_hooks.events.form_edit', id=hookId) %}
{% if hooks is iterable and hooks|length > 0 %}
    {% for providerArea, hook in hooks if providerArea != 'provider.scribite.ui_hooks.editor' %}
        <fieldset>
            {{ hook }}
        </fieldset>
    {% endfor %}
{% endif %}

{% if form.moderationSpecificCreator is defined %}
    <fieldset id="moderationFieldsSection">
        <legend>{{ __('Moderation') }} <i class="fa fa-expand"></i></legend>
        <div id="moderationFieldsContent">
            {{ form_row(form.moderationSpecificCreator) }}
            {{ form_row(form.moderationSpecificCreationDate) }}
        </div>
    </fieldset>
{% endif %}

{# include return control #}
{% if mode == 'create' %}
    <fieldset>
        <legend>{{ __('Return control') }}</legend>
        {{ form_row(form.repeatCreation) }}
    </fieldset>
{% endif %}

{# include possible submit actions #}
<div class="form-group form-buttons">
    <div class="col-sm-offset-3 col-sm-9">
        {% for action in actions %}
            {{ form_widget(attribute(form, action.id)) }}
        {% endfor %}
        {{ form_widget(form.reset) }}
        {{ form_widget(form.cancel) }}
    </div>
</div>
{{ form_end(form) }}
</div>
{% endblock %}
{% block footer %}
    {{ parent() }}

    {% set editImage = '<span class="fa fa-pencil-square-o"></span>' %}
    {% set deleteImage = '<span class="fa fa-trash-o"></span>' %}
    
    <script type="text/javascript">
    /* <![CDATA[ */
        
        
        ( function($) {
            $(document).ready(function() {
                // initialise auto completion for user fields
                {% if form.moderationSpecificCreator is defined %}
                    pggoNewsDatesInitUserField('pggonewsdatesmodule_event_moderationSpecificCreator', 'getCommonUsersList');
                {% endif %}
                pggoNewsDatesInitEditForm('{{ mode }}', '{% if mode != 'create' %}{{ event.id }}{% endif %}');
                pggoNewsDatesInitDateField('pggonewsdatesmodule_event_startDate');
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endblock %}
