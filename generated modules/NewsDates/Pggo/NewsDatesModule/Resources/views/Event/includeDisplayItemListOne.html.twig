{# purpose of this template: inclusion template for display of related events #}
{% set hasAdminPermission = hasPermission('PggoNewsDatesModule:Event:', '::', 'ACCESS_EDIT') %}
{% if nolink is not defined %}
    {% set nolink = false %}
{% endif %}
<h4>
{% spaceless %}
{% if not nolink %}
    <a href="{{ path('pggonewsdatesmodule_event_' ~ routeArea ~ 'display', { 'id': item.id, 'slug': item.slug }) }}" title="{{ item.getTitleFromDisplayPattern()|e('html_attr') }}">
{% endif %}
    {{ item.getTitleFromDisplayPattern() }}
{% if not nolink %}
    </a>
    <a id="eventItem{{ item.id }}Display" href="{{ path('pggonewsdatesmodule_event_' ~ routeArea ~ 'display', { 'id': item.id, 'slug': item.slug, 'raw': 1 }) }}" title="{{ __('Open quick view window') }}" class="pggonewsdates-inline-window hidden" data-modal-title="{{ item.getTitleFromDisplayPattern()|e('html_attr') }}"><span class="fa fa-id-card-o"></span></a>
{% endif %}
{% endspaceless %}
</h4>
